<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.2.0/socket.io.js" integrity="sha256-yr4fRk/GU1ehYJPAs8P4JlTgu0Hdsp4ZKrx8bDEDC3I=" crossorigin="anonymous"></script>
  <script  src="/logic.js" ></script>
  <title>Document</title>
</head>
<body>
  <head>message board</head>
  <form action="/messages/new/processing" method="POST" class="messageForm">
    name: <input type="text" name="name" >
    message: <textarea name="message" id="" cols="30" rows="10"></textarea>
    <button type="submit">submit</button>
  </form>
  <% for(const message of messages){%>
    <section>
      <h2>name:<%= message.sender %> </h2>
      <h1>messages: <%=message.message%></h1>

      <% for(const comment of message.comment){ %>
        <p><span>name: <%= comment.sender %></span> messages: <%= comment.comment %></p>
        <%}%>

      <form action="/comments/new/processing" method='POST'>
        name: <input type="text" name="name" >
        comment: <textarea name="comment" id="" cols="30" rows="10"></textarea>
        <input type="hidden" name="messageId" value="<%= message._id %>">
        <button type="submit">submit</button>
      </form>
    </section>
    <%}%>
</body>
</html>
